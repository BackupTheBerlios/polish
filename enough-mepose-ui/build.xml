	<target name="meposeUIsrc.zip" depends="init" unless="meposeUIsrc.zip">
		<mkdir dir="${build.result.folder}"/>
		<zip destfile="${build.result.folder}/meposeUIsrc.zip" filesonly="false" whenempty="skip" update="false">
			<fileset dir="source/src/" includes="**/*.java"			/>
		</zip>
	</target>

	<target name="build.jars" depends="init" description="Build all the jars for the plug-in: de.enough.mepose.ui.">
		<available property="meposeUI.jar" file="${build.result.folder}/meposeUI.jar"/>
		<antcall target="meposeUI.jar"/>
	</target>

	<target name="build.sources" depends="init">
		<available property="meposeUIsrc.zip" file="${build.result.folder}/meposeUIsrc.zip"/>
		<antcall target="meposeUIsrc.zip"/>
	</target>

	<target name="gather.bin.parts" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/de.enough.mepose.ui_0.1.0"/>
		<copy todir="${destination.temp.folder}/de.enough.mepose.ui_0.1.0" failonerror="true" overwrite="false">
			<fileset dir="${build.result.folder}" includes="meposeUI.jar"			/>
		</copy>
		<copy todir="${destination.temp.folder}/de.enough.mepose.ui_0.1.0" failonerror="true" overwrite="false">
			<fileset dir="${basedir}" includes="plugin.xml,meposeUI.jar,META-INF/,icons/polish_logo_16x16.png"			/>
		</copy>
	</target>

	<target name="build.zips" depends="init">
	</target>

	<target name="gather.sources" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/de.enough.mepose.ui_0.1.0"/>
		<copy file="${build.result.folder}/meposeUIsrc.zip" todir="${destination.temp.folder}/de.enough.mepose.ui_0.1.0" failonerror="false" overwrite="false"/>
	</target>

	<target name="gather.logs" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/de.enough.mepose.ui_0.1.0"/>
		<copy file="${temp.folder}/meposeUI.jar.bin.log" todir="${destination.temp.folder}/de.enough.mepose.ui_0.1.0" failonerror="false" overwrite="false"/>
	</target>

	<target name="clean" depends="init" description="Clean the plug-in: de.enough.mepose.ui of all the zips, jars and logs created.">
		<delete file="${build.result.folder}/meposeUI.jar"/>
		<delete file="${build.result.folder}/meposeUIsrc.zip"/>
		<delete file="${plugin.destination}/de.enough.mepose.ui_0.1.0.jar"/>
		<delete file="${plugin.destination}/de.enough.mepose.ui_0.1.0.zip"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="refresh" depends="init" if="eclipse.running" description="Refresh this folder.">
		<eclipse.convertPath fileSystemPath="/home/rickyn/eclipse/workspace/enough-mepose-ui" property="resourcePath"/>
		<eclipse.refreshLocal resource="${resourcePath}" depth="infinite"/>
	</target>

	<target name="zip.plugin" depends="init" description="Create a zip containing all the elements for the plug-in: de.enough.mepose.ui.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="build.sources"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<antcall target="gather.sources">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<delete>
			<fileset dir="${temp.folder}" includes="**/*.bin.log"			/>
		</delete>
		<zip destfile="${plugin.destination}/de.enough.mepose.ui_0.1.0.zip" basedir="${temp.folder}" filesonly="true" whenempty="skip" update="false"/>
