			<src path="source/src/"			/>
			</javac>
		<!-- Copy necessary resources -->
		<copy todir="${temp.folder}/meposeUI.jar.bin" failonerror="true" overwrite="false">
			<fileset dir="source/src/" excludes="**/*.java, **/package.htm*,null"			/>
		</copy>
		<mkdir dir="${build.result.folder}"/>
		<jar destfile="${build.result.folder}/meposeUI.jar" basedir="${temp.folder}/meposeUI.jar.bin"/>
		<delete dir="${temp.folder}/meposeUI.jar.bin"/>
