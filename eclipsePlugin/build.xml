<?xml version="1.0" encoding="UTF-8"?>
<project name="de.enough.polish.plugin.eclipse.css.CssEditorPlugin" default="build.jars" basedir=".">

	<property name="bootclasspath" value=""/>
	<property name="basews" value="${ws}"/>
	<property name="baseos" value="${os}"/>
	<property name="basearch" value="${arch}"/>
	<property name="basenl" value="${nl}"/>
	<property name="javacFailOnError" value="false"/>
	<property name="javacDebugInfo" value="on"/>
	<property name="javacVerbose" value="true"/>
	<property name="javacSource" value="1.3"/>
	<property name="javacTarget" value="1.2"/>
	<property name="compilerArg" value=""/>

	<target name="init" depends="properties">
		<condition property="pluginTemp" value="${buildTempFolder}/plugins">
			<isset property="buildTempFolder"/>
		</condition>
		<property name="pluginTemp" value="${basedir}"/>
		<condition property="build.result.folder" value="${pluginTemp}/enough-polish-plugin-eclipse-cssEditor">
			<isset property="buildTempFolder"/>
		</condition>
		<property name="build.result.folder" value="${basedir}"/>
		<property name="temp.folder" value="${basedir}/temp.folder"/>
		<property name="plugin.destination" value="${basedir}"/>
	</target>

	<target name="properties" if="eclipse.running">
		<property name="build.compiler" value="org.eclipse.jdt.core.JDTCompilerAdapter"/>
	</target>

	<target name="build.update.jar" depends="init" description="Build the plug-in: de.enough.polish.plugin.eclipse.css.CssEditorPlugin for an update site.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<zip zipfile="${plugin.destination}/de.enough.polish.plugin.eclipse.css.CssEditorPlugin_0.3.0.jar" basedir="${temp.folder}/de.enough.polish.plugin.eclipse.css.CssEditorPlugin_0.3.0" filesonly="false" whenempty="skip" update="false"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="CssEditor.jar" depends="init" unless="CssEditor.jar" description="Create jar: CssEditor.jar.">
		<delete dir="${temp.folder}/CssEditor.jar.bin"/>
		<mkdir dir="${temp.folder}/CssEditor.jar.bin"/>
		<!-- compile the source code -->
		<javac destdir="${temp.folder}/CssEditor.jar.bin" failonerror="${javacFailOnError}" verbose="${javacVerbose}" debug="${javacDebugInfo}" includeAntRuntime="no" bootclasspath="${bootclasspath}" source="${javacSource}" target="${javacTarget}"		>
			<compilerarg line="${compilerArg}"/>
			<classpath>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.ui_3.0.1/ui.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.ui.carbon_3.0.0/ui.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.ui.carbon_3.0.0/carbon.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.core.runtime_3.0.1/runtime.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.osgi_3.0.1/core.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.osgi_3.0.1/console.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.osgi_3.0.1/osgi.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.osgi_3.0.1/resolver.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.osgi_3.0.1/defaultAdaptor.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.osgi_3.0.1/eclipseAdaptor.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.help_3.0.0/help.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.swt_3.0.1/ws/${basews}/swt.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.swt.carbon_3.0.1/ws/${basews}/swt.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.swt.carbon_3.0.1/ws/carbon/swt-pi.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.jface_3.0.0/jface.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.ui.workbench_3.0.1/compatibility.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.ui.workbench_3.0.1/workbench.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.ui.workbench.compatibility_3.0.0/compatibility.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.ui.workbench.compatibility_3.0.0/workbench.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.core.expressions_3.0.0/expressions.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.ui.editors_3.0.1/editors.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.ui.ide_3.0.1/ide.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.core.resources_3.0.1/resources.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.core.resources.macosx_3.0.0/resources.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.core.runtime.compatibility_3.0.0/compatibility.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.update.configurator_3.0.0/configurator.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.ui.views_3.0.0/views.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.update.core_3.0.1/updatecore.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.update.ui_3.0.1/updateui.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.help.base_3.0.1/helpbase.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.apache.lucene_1.3.1/parser.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.apache.lucene_1.3.1/lucene-1.3-final.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.help.appserver_3.0.0/appserver.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.ui.forms_3.0.0/forms.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.ui.workbench.texteditor_3.0.1/texteditor.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.jface.text_3.0.1/jfacetext.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.text_3.0.1/text.jar"/>
				<pathelement path="../../../../Applications/eclipse/plugins/org.eclipse.core.filebuffers_3.0.1/filebuffers.jar"/>
				<pathelement path="lib/antlr-2.7.5.jar"/>
			</classpath>
			<src path="source/src/"			/>
			</javac>
		<!-- Copy necessary resources -->
		<copy todir="${temp.folder}/CssEditor.jar.bin" failonerror="true">
			<fileset dir="source/src/" excludes="**/*.java, **/package.htm*"			/>
		</copy>
		<mkdir dir="${build.result.folder}"/>
		<jar jarfile="${build.result.folder}/CssEditor.jar" basedir="${temp.folder}/CssEditor.jar.bin"/>
		<delete dir="${temp.folder}/CssEditor.jar.bin"/>
	</target>

	<target name="CssEditorsrc.zip" depends="init" unless="CssEditorsrc.zip">
		<mkdir dir="${build.result.folder}"/>
		<zip zipfile="${build.result.folder}/CssEditorsrc.zip" filesonly="false" whenempty="skip" update="false">
			<fileset dir="source/src/" includes="**/*.java"			/>
		</zip>
	</target>

	<target name="build.jars" depends="init" description="Build all the jars for the plug-in: de.enough.polish.plugin.eclipse.css.CssEditorPlugin.">
		<available property="CssEditor.jar" file="${build.result.folder}/CssEditor.jar"/>
		<antcall target="CssEditor.jar"/>
	</target>

	<target name="build.sources" depends="init">
		<available property="CssEditorsrc.zip" file="${build.result.folder}/CssEditorsrc.zip"/>
		<antcall target="CssEditorsrc.zip"/>
	</target>

	<target name="gather.bin.parts" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/de.enough.polish.plugin.eclipse.css.CssEditorPlugin_0.3.0"/>
		<copy todir="${destination.temp.folder}/de.enough.polish.plugin.eclipse.css.CssEditorPlugin_0.3.0" failonerror="true">
			<fileset dir="${build.result.folder}" includes="CssEditor.jar"			/>
		</copy>
		<copy todir="${destination.temp.folder}/de.enough.polish.plugin.eclipse.css.CssEditorPlugin_0.3.0" failonerror="true">
			<fileset dir="${basedir}" includes="plugin.xml,CssEditor.jar,icons/,bin/,build.properties"			/>
		</copy>
	</target>

	<target name="build.zips" depends="init">
	</target>

	<target name="gather.sources" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/de.enough.polish.plugin.eclipse.css.CssEditorPlugin_0.3.0"/>
		<copy file="${build.result.folder}/CssEditorsrc.zip" todir="${destination.temp.folder}/de.enough.polish.plugin.eclipse.css.CssEditorPlugin_0.3.0" failonerror="false"/>
		<copy todir="${destination.temp.folder}/de.enough.polish.plugin.eclipse.css.CssEditorPlugin_0.3.0" failonerror="false">
			<fileset dir="${basedir}" includes="src/,plugin.xml,icons/,build.properties"			/>
		</copy>
	</target>

	<target name="gather.logs" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/de.enough.polish.plugin.eclipse.css.CssEditorPlugin_0.3.0"/>
		<copy file="${temp.folder}/CssEditor.jar.bin.log" todir="${destination.temp.folder}/de.enough.polish.plugin.eclipse.css.CssEditorPlugin_0.3.0" failonerror="false"/>
	</target>

	<target name="clean" depends="init" description="Clean the plug-in: de.enough.polish.plugin.eclipse.css.CssEditorPlugin of all the zips, jars and logs created.">
		<delete file="${build.result.folder}/CssEditor.jar"/>
		<delete file="${build.result.folder}/CssEditorsrc.zip"/>
		<delete file="${plugin.destination}/de.enough.polish.plugin.eclipse.css.CssEditorPlugin_0.3.0.jar"/>
		<delete file="${plugin.destination}/de.enough.polish.plugin.eclipse.css.CssEditorPlugin_0.3.0.zip"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="refresh" depends="init" if="eclipse.running" description="Refresh this folder.">
		<eclipse.convertPath fileSystemPath="/Users/ricky/workspace/enough-polish-plugin-eclipse-cssEditor" property="resourcePath"/>
		<eclipse.refreshLocal resource="${resourcePath}" depth="infinite"/>
	</target>

	<target name="zip.plugin" depends="init" description="Create a zip containing all the elements for the plug-in: de.enough.polish.plugin.eclipse.css.CssEditorPlugin.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="build.sources"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<antcall target="gather.sources">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<delete>
			<fileset dir="${temp.folder}" includes="**/*.bin.log"			/>
		</delete>
		<zip zipfile="${plugin.destination}/de.enough.polish.plugin.eclipse.css.CssEditorPlugin_0.3.0.zip" basedir="${temp.folder}" filesonly="true" whenempty="skip" update="false"/>
		<delete dir="${temp.folder}"/>
	</target>

</project>
