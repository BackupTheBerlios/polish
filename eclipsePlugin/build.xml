<?xml version="1.0" encoding="UTF-8"?>

<project basedir="." default="build.jars" name="de.enough.polish.plugin.eclipse.css.CssEditorPlugin">
    <property name="basews" value="${ws}"></property>
    <property name="baseos" value="${os}"></property>
