<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<installation version="1.0">

    <!--
        The info section.
        The meaning of the tags should be natural ...
    -->
    <info>
        <appname>J2ME-Polish</appname>
        <appversion>${Version}</appversion>
        <authors>
            <author name="Robert Virkus" email="info@enough.de"/>
        </authors>
        <url>http://www.j2mepolish.org/</url>
    </info>
    
    <!-- 
        The gui preferences indication.
        Sets the installer window to 800x480. It will be able to change the size.
    -->
	<guiprefs width="800" height="480" resizable="yes">
    	<laf name="metouia">
        	<os family="unix" />
        	<os family="windows" />
        	<os family="osx" />
    	</laf>
	</guiprefs>    
    <!-- 
        The locale section.
        Only use the English locale at the moment.
    -->
    <locale>
        <langpack iso3="eng"/>
    </locale>
    
    <!-- 
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    -->
    <resources>
        <res id="HTMLLicencePanel.licence" src="../setup/htmllicense.txt"/>
	<res id="userInputSpec.xml" src="userInputSpec.xml" />
	<res id="useNativeLAF" src="../setup/useNativeLAF" />
        <res id="Installer.image" src="../setup/j2mepolish-logo.png" />
    </resources>
    
    <!-- 
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>
	<!-- welcome screen -->
        <panel classname="UserInputPanel" />
	<!-- showing the licensing possibilities -->
        <panel classname="HTMLLicencePanel" />
	<!-- choosing the license -->
        <panel classname="ChooseLicensePanel" />
	<!-- where to find the WTK -->
 	<panel classname="UserInputPanel" />
        <!-- what packages should be installed -->
        <panel classname="PacksPanel" />
	<!-- where to install J2ME Polish -->
 	<panel classname="TargetPanel" />
	<!-- the actual installation -->
        <panel classname="InstallPanel" />
	<!-- installation success screen -->
 	<panel classname="UserInputPanel" />
    </panels>
    
    <!-- 
        The packs section.
        We specify here our packs.
    -->
    <packs>
        <pack name="Base" required="yes">
            <description>The J2ME Polish library files, which will be copied into the &quot;import&quot;-folder.</description>
            <file src="import" targetdir="$INSTALL_PATH"/>
            <file src="Readme.txt" targetdir="$INSTALL_PATH"/>
            <file src="../custom-css-attributes.xml" targetdir="$INSTALL_PATH"/>
            <file src="../LICENSE.txt" targetdir="$INSTALL_PATH"/>
            <!--
            <file src="../setup/build.xml" targetdir="$INSTALL_PATH"/>
            <parsable targetfile="$INSTALL_PATH/build.xml" type="shell" /> 
            -->
        </pack>
        <pack name="Sample Application" required="yes">
            <description>A sample application which shows a simple menu and contains two different CSS designs. This can be used as a master for new projects.</description>
            <file src="src" targetdir="$INSTALL_PATH/sample"/>
            <file src="resources" targetdir="$INSTALL_PATH/sample"/>
            <file src="resources2" targetdir="$INSTALL_PATH/sample"/>
            <file src="../setup/.classpath" targetdir="$INSTALL_PATH/sample"/>
            <file src="../setup/.project" targetdir="$INSTALL_PATH/sample"/>
            <file src="../setup/build.xml" targetdir="$INSTALL_PATH/sample"/>
            <parsable targetfile="$INSTALL_PATH/sample/build.xml" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/sample/.classpath" type="shell" /> 
        </pack>
        <pack name="External Device Database" required="no" preselected="yes" >
            <description>The files &quot;devices.xml&quot;, &quot;vendors.xml&quot;, &quot;groups.xml&quot; and &quot;apis.xml&quot;. These are necessary if you want to add your own device-definitions or modify existing ones.</description>
            <file src="devices.xml" targetdir="$INSTALL_PATH"/>
            <file src="vendors.xml" targetdir="$INSTALL_PATH"/>
      	    <file src="groups.xml" targetdir="$INSTALL_PATH"/>
            <file src="apis.xml" targetdir="$INSTALL_PATH"/>
        </pack>
        <pack name="Docs" required="no" preselected="yes">
            <description>The documentation of J2ME Polish in HTML and PDF format.</description>
            <file src="doc" targetdir="$INSTALL_PATH"/> <!-- Reccursive adding -->
        </pack>
        <pack name="Tools" required="no" preselected="yes">
            <description>General stand-alone tools for J2ME development, e.g. the binary data editor or an editor for creating bitmap-fonts.</description>
            <file src="macosx/binaryeditor.app" targetdir="$INSTALL_PATH/bin" os="Mac OS X" />
            <file src="macosx/fonteditor.app" targetdir="$INSTALL_PATH/bin" os="Mac OS X" />
            <file src="../setup/scripts/binaryeditor" targetdir="$INSTALL_PATH/bin" os="unix"/>
            <file src="../setup/scripts/binaryeditor.bat" targetdir="$INSTALL_PATH/bin" os="windows"/>
            <file src="../setup/scripts/fonteditor" targetdir="$INSTALL_PATH/bin" os="unix"/>
            <file src="../setup/scripts/fonteditor.bat" targetdir="$INSTALL_PATH/bin" os="windows"/>
            <file src="../setup/bin/level.definition" targetdir="$INSTALL_PATH/bin" />
            <file src="../setup/bin/level1.data" targetdir="$INSTALL_PATH/bin" />
            <file src="../setup/bin/readme.txt" targetdir="$INSTALL_PATH/bin" />
            <file src="../setup/bin/example.bmf" targetdir="$INSTALL_PATH/bin" />
            <file src="../setup/bin/bmf.definition" targetdir="$INSTALL_PATH/bin" />
            <!-- mark Unix shell skripts as executable: -->
            <executable targetfile="$INSTALL_PATH/bin/binaryeditor" stage="never" os="unix" />
            <executable targetfile="$INSTALL_PATH/bin/fonteditor" stage="never" os="unix" />
            <executable targetfile="$INSTALL_PATH/bin/binaryeditor" stage="never" os="unix" />
            <executable targetfile="$INSTALL_PATH/bin/fonteditor.app/Contents/MacOS/FontEditor" stage="never" os="Mac OS X" />
            <executable targetfile="$INSTALL_PATH/bin/binaryeditor.app/Contents/MacOS/BinaryEditor" stage="never" os="Mac OS X" />
            <parsable targetfile="$INSTALL_PATH/bin/binaryeditor" type="shell"  os="unix" /> 
            <parsable targetfile="$INSTALL_PATH/bin/binaryeditor.bat" type="shell" os="windows" /> 
            <parsable targetfile="$INSTALL_PATH/bin/fonteditor" type="shell"  os="unix" /> 
            <parsable targetfile="$INSTALL_PATH/bin/fonteditor.bat" type="shell" os="windows" /> 
            <parsable targetfile="$INSTALL_PATH/bin/fonteditor.app/Contents/Info.plist" type="shell" os="Mac OS X" />
            <parsable targetfile="$INSTALL_PATH/bin/binaryeditor.app/Contents/Info.plist" type="shell" os="Mac OS X" />
        </pack>
        <pack name="Sources" required="no" preselected="no">
            <description>The sources of J2ME Polish. These are useful if you want to extend J2ME Polish.</description>
            <file src="j2mepolish-src" targetdir="$INSTALL_PATH"/>
        </pack>
        <pack name="OS X: JadUtil.jar" required="no" preselected="yes" os="Mac OS X">
            <description>The Jad utility is needed for signing MIDlets on Mac OS X platforms.</description>
            <file src="../setup/JadTool.jar" targetdir="$INSTALL_PATH/bin"/>
        </pack>
    </packs>
    
</installation>
