<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<installation version="1.0">

    <!--
        The info section.
        The meaning of the tags should be natural ...
    -->
    <info>
        <appname>J2ME-Polish</appname>
        <appversion>${Version}</appversion>
        <authors>
            <author name="Robert Virkus" email="j2mepolish@enough.de"/>
        </authors>
        <url>http://www.j2mepolish.org/</url>
    </info>
    
    <!-- 
        The gui preferences indication.
        Sets the installer window to 800x480. It will be able to change the size.
    -->
	<guiprefs width="800" height="480" resizable="yes">
    	<laf name="metouia">
        	<os family="unix" />
        	<os family="windows" />
        	<os family="osx" />
    	</laf>
	</guiprefs>    
    <!-- 
        The locale section.
        Only use the English locale at the moment.
    -->
    <locale>
        <langpack iso3="eng"/>
    </locale>
    
    <!-- 
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    -->
    <resources>
        <res id="HTMLLicencePanel.licence" src="../setup/htmllicense.txt"/>
	<res id="userInputSpec.xml" src="userInputSpec.xml" />
	<res id="useNativeLAF" src="../setup/useNativeLAF" />
        <res id="Installer.image" src="../setup/j2mepolish-logo.png" />
    </resources>
    
    <!-- 
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>
	<!-- welcome screen -->
        <panel classname="UserInputPanel" />
	<!-- showing the licensing possibilities -->
        <panel classname="HTMLLicencePanel" />
	<!-- choosing the license -->
        <panel classname="ChooseLicensePanel" />
	<!-- where to find the WTK -->
 	<panel classname="UserInputPanel" />
        <!-- what packages should be installed -->
        <panel classname="PacksPanel" />
	<!-- where to install J2ME Polish -->
 	<panel classname="TargetPanel" />
	<!-- the actual installation -->
        <panel classname="InstallPanel" />
	<!-- installation success screen -->
 	<panel classname="UserInputPanel" />
    </panels>
    
    <!-- 
        The packs section.
        We specify here our packs.
    -->
    <packs>
        <pack name="Base" required="yes">
            <description>The J2ME Polish library files, which will be copied into the &quot;lib&quot;- and &quot;import&quot;-folder.</description>
            <file src="import" targetdir="$INSTALL_PATH"/>
            <file src="lib" targetdir="$INSTALL_PATH"/>
            <file src="Readme.txt" targetdir="$INSTALL_PATH"/>
            <file src="../custom-css-attributes.xml" targetdir="$INSTALL_PATH"/>
            <file src="../LICENSE.txt" targetdir="$INSTALL_PATH"/>
            <file src="custom-devices.xml" targetdir="$INSTALL_PATH"/>
            <!--
            <file src="../setup/build.xml" targetdir="$INSTALL_PATH"/>
            <parsable targetfile="$INSTALL_PATH/build.xml" type="shell" /> 
            -->
        </pack>
        <pack name="Menu Sample Application" required="yes">
            <description>A sample application that shows a simple menu and contains three different CSS designs. This can be used as a master for new projects.</description>
            <file src="samples/menu/source" targetdir="$INSTALL_PATH/samples/menu"/>
            <file src="samples/menu/resources" targetdir="$INSTALL_PATH/samples/menu"/>
            <file src="samples/menu/resources2" targetdir="$INSTALL_PATH/samples/menu"/>
            <file src="samples/menu/resources3" targetdir="$INSTALL_PATH/samples/menu"/>
            <file src="../setup/samples/menu/.classpath" targetdir="$INSTALL_PATH/samples/menu"/>
            <file src="../setup/samples/menu/.project" targetdir="$INSTALL_PATH/samples/menu"/>
            <file src="../setup/samples/menu/build.xml" targetdir="$INSTALL_PATH/samples/menu"/>
            <file src="../setup/samples/menu/build-netbeans.xml" targetdir="$INSTALL_PATH/samples/menu"/>
            <file src="../setup/samples/menu/nbproject" targetdir="$INSTALL_PATH/samples/menu"/>
            <parsable targetfile="$INSTALL_PATH/samples/menu/build.xml" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/menu/build-netbeans.xml" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/menu/.classpath" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/menu/nbproject/project.properties" type="shell" /> 
        </pack>
        <pack name="Logviewer Sample Application" required="yes">
            <description>A sample application that is used to show log entries that have been previously stored in the recordstore.</description>
            <file src="../setup/samples/logviewer/.classpath" targetdir="$INSTALL_PATH/samples/logviewer"/>
            <file src="../setup/samples/logviewer/.project" targetdir="$INSTALL_PATH/samples/logviewer"/>
            <file src="../setup/samples/logviewer/readme.txt" targetdir="$INSTALL_PATH/samples/logviewer"/>
            <file src="samples/logviewer/source" targetdir="$INSTALL_PATH/samples/logviewer"/>
            <file src="samples/logviewer/resources" targetdir="$INSTALL_PATH/samples/logviewer"/>
            <file src="../setup/samples/logviewer/build.xml" targetdir="$INSTALL_PATH/samples/logviewer"/>
            <file src="../setup/samples/logviewer/build-netbeans.xml" targetdir="$INSTALL_PATH/samples/logviewer"/>
            <file src="../setup/samples/logviewer/nbproject" targetdir="$INSTALL_PATH/samples/logviewer"/>
            <parsable targetfile="$INSTALL_PATH/samples/logviewer/build.xml" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/logviewer/build-netbeans.xml" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/logviewer/nbproject/project.properties" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/logviewer/.classpath" type="shell" /> 
        </pack>
        <pack name="Serialization Sample Application" required="no" preselected="yes">
            <description>A sample application that shows how to use the serialization framework of J2ME Polish.</description>
            <file src="samples/serialization/source" targetdir="$INSTALL_PATH/samples/serialization"/>
            <file src="samples/serialization/resources" targetdir="$INSTALL_PATH/samples/serialization"/>
            <file src="../setup/samples/serialization/build.xml" targetdir="$INSTALL_PATH/samples/serialization"/>
            <file src="../setup/samples/serialization/build-netbeans.xml" targetdir="$INSTALL_PATH/samples/serialization"/>
            <file src="../setup/samples/serialization/nbproject" targetdir="$INSTALL_PATH/samples/serialization"/>
            <file src="../setup/samples/serialization/.classpath" targetdir="$INSTALL_PATH/samples/serialization"/>
            <file src="../setup/samples/serialization/.project" targetdir="$INSTALL_PATH/samples/serialization"/>
            <parsable targetfile="$INSTALL_PATH/samples/serialization/build.xml" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/serialization/.classpath" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/serialization/build-netbeans.xml" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/serialization/nbproject/project.properties" type="shell" /> 
        </pack>
        
        <pack name="RMI Sample Application" required="no" preselected="yes">
            <description>A sample application that shows how to use the RMI (remote method invocation) framework of J2ME Polish.</description>
            <file src="samples/rmi/source" targetdir="$INSTALL_PATH/samples/rmi"/>
            <file src="samples/rmi/resources" targetdir="$INSTALL_PATH/samples/rmi"/>
            <file src="../setup/samples/rmi/build.xml" targetdir="$INSTALL_PATH/samples/rmi"/>
            <file src="../setup/samples/rmi/build-netbeans.xml" targetdir="$INSTALL_PATH/samples/rmi"/>
            <file src="../setup/samples/rmi/nbproject" targetdir="$INSTALL_PATH/samples/rmi"/>
            <file src="../setup/samples/rmi/.classpath" targetdir="$INSTALL_PATH/samples/rmi"/>
            <file src="../setup/samples/rmi/.project" targetdir="$INSTALL_PATH/samples/rmi"/>
            <parsable targetfile="$INSTALL_PATH/samples/rmi/build.xml" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/rmi/.classpath" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/rmi/build-netbeans.xml" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/rmi/nbproject/project.properties" type="shell" /> 
        </pack>
        
        <pack name="Java 5 Syntax Sample Project" required="no" preselected="yes">
            <description>You can use Java 5 syntax elements like generics, autoboxing and enums with J2ME Polish. This project shows you an example.</description>
            <file src="samples/java5/source" targetdir="$INSTALL_PATH/samples/java5"/>
            <file src="samples/java5/resources" targetdir="$INSTALL_PATH/samples/java5"/>
            <file src="../setup/samples/java5/build.xml" targetdir="$INSTALL_PATH/samples/java5"/>
            <file src="../setup/samples/java5/build-netbeans.xml" targetdir="$INSTALL_PATH/samples/java5"/>
            <file src="../setup/samples/java5/nbproject" targetdir="$INSTALL_PATH/samples/java5"/>
            <file src="../setup/samples/java5/.classpath" targetdir="$INSTALL_PATH/samples/java5"/>
            <file src="../setup/samples/java5/.project" targetdir="$INSTALL_PATH/samples/java5"/>
            <parsable targetfile="$INSTALL_PATH/samples/java5/build.xml" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/java5/.classpath" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/java5/build-netbeans.xml" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/java5/nbproject/project.properties" type="shell" /> 
        </pack>
        
        <pack name="Roadrunner Sample Application" required="no" preselected="yes">
            <description>A sample application that features a well know game principle.</description>
            <file src="samples/roadrunner/source" targetdir="$INSTALL_PATH/samples/roadrunner"/>
            <file src="samples/roadrunner/resources" targetdir="$INSTALL_PATH/samples/roadrunner"/>
            <file src="../setup/samples/roadrunner/build.xml" targetdir="$INSTALL_PATH/samples/roadrunner"/>
            <file src="../setup/samples/roadrunner/build-netbeans.xml" targetdir="$INSTALL_PATH/samples/roadrunner"/>
            <file src="../setup/samples/roadrunner/nbproject" targetdir="$INSTALL_PATH/samples/roadrunner"/>
            <file src="../setup/samples/roadrunner/.classpath" targetdir="$INSTALL_PATH/samples/roadrunner"/>
            <file src="../setup/samples/roadrunner/.project" targetdir="$INSTALL_PATH/samples/roadrunner"/>
            <parsable targetfile="$INSTALL_PATH/samples/roadrunner/build.xml" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/roadrunner/.classpath" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/roadrunner/build-netbeans.xml" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/roadrunner/nbproject/project.properties" type="shell" /> 
        </pack>
        <pack name="Email Sample Application" required="no" preselected="yes">
            <description>A sample application that shows how to use subcommands as well as an advanced TextField.</description>
            <file src="samples/email/source" targetdir="$INSTALL_PATH/samples/email"/>
            <file src="samples/email/resources" targetdir="$INSTALL_PATH/samples/email"/>
            <file src="../setup/samples/email/build.xml" targetdir="$INSTALL_PATH/samples/email"/>
            <file src="../setup/samples/email/build-netbeans.xml" targetdir="$INSTALL_PATH/samples/email"/>
            <file src="../setup/samples/email/nbproject" targetdir="$INSTALL_PATH/samples/email"/>
            <file src="../setup/samples/email/.classpath" targetdir="$INSTALL_PATH/samples/email"/>
            <file src="../setup/samples/email/.project" targetdir="$INSTALL_PATH/samples/email"/>
            <parsable targetfile="$INSTALL_PATH/samples/email/build.xml" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/email/.classpath" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/email/build-netbeans.xml" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/email/nbproject/project.properties" type="shell" /> 
        </pack>
        <pack name="FramedForm Sample Application" required="no" preselected="yes">
            <description>A sample application that shows how to use the FramedForm.</description>
            <file src="samples/framedform/source" targetdir="$INSTALL_PATH/samples/framedform"/>
            <file src="samples/framedform/resources" targetdir="$INSTALL_PATH/samples/framedform"/>
            <file src="../setup/samples/framedform/build.xml" targetdir="$INSTALL_PATH/samples/framedform"/>
            <file src="../setup/samples/framedform/build-netbeans.xml" targetdir="$INSTALL_PATH/samples/framedform"/>
            <file src="../setup/samples/framedform/nbproject" targetdir="$INSTALL_PATH/samples/framedform"/>
            <file src="../setup/samples/framedform/.classpath" targetdir="$INSTALL_PATH/samples/framedform"/>
            <file src="../setup/samples/framedform/.project" targetdir="$INSTALL_PATH/samples/framedform"/>
            <parsable targetfile="$INSTALL_PATH/samples/framedform/build.xml" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/framedform/.classpath" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/framedform/build-netbeans.xml" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/framedform/nbproject/project.properties" type="shell" /> 
        </pack>
        <pack name="TabbedForm Sample Application" required="no" preselected="yes">
            <description>A sample application that shows how to use the TabbedForm.</description>
            <file src="samples/tabbedform/source" targetdir="$INSTALL_PATH/samples/tabbedform"/>
            <file src="samples/tabbedform/resources" targetdir="$INSTALL_PATH/samples/tabbedform"/>
            <file src="../setup/samples/tabbedform/build.xml" targetdir="$INSTALL_PATH/samples/tabbedform"/>
            <file src="../setup/samples/tabbedform/build-netbeans.xml" targetdir="$INSTALL_PATH/samples/tabbedform"/>
            <file src="../setup/samples/tabbedform/nbproject" targetdir="$INSTALL_PATH/samples/tabbedform"/>
            <file src="../setup/samples/tabbedform/.classpath" targetdir="$INSTALL_PATH/samples/tabbedform"/>
            <file src="../setup/samples/tabbedform/.project" targetdir="$INSTALL_PATH/samples/tabbedform"/>
            <parsable targetfile="$INSTALL_PATH/samples/tabbedform/build.xml" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/tabbedform/.classpath" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/tabbedform/build-netbeans.xml" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/tabbedform/nbproject/project.properties" type="shell" /> 
        </pack>
        <pack name="MIDP SysInfo" required="no" preselected="yes">
            <description>An application that checks the capabilities of your device. This application is based on Grimo Software's MIDP SysInfo MIDlet and is a co-effort of Grimo Software, Enough Software and Mark Schriejver.</description>
            <file src="samples/sysinfo/source" targetdir="$INSTALL_PATH/samples/sysinfo"/>
            <file src="samples/sysinfo/resources" targetdir="$INSTALL_PATH/samples/sysinfo"/>
            <file src="../setup/samples/sysinfo/.classpath" targetdir="$INSTALL_PATH/samples/sysinfo"/>
            <file src="../setup/samples/sysinfo/.project" targetdir="$INSTALL_PATH/samples/sysinfo"/>
            <file src="../setup/samples/sysinfo/build.xml" targetdir="$INSTALL_PATH/samples/sysinfo"/>
            <file src="../setup/samples/sysinfo/build-netbeans.xml" targetdir="$INSTALL_PATH/samples/sysinfo"/>
            <file src="../setup/samples/sysinfo/nbproject" targetdir="$INSTALL_PATH/samples/sysinfo"/>
            <parsable targetfile="$INSTALL_PATH/samples/sysinfo/build-netbeans.xml" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/sysinfo/nbproject/project.properties" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/sysinfo/build.xml" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/sysinfo/.classpath" type="shell" /> 
        </pack>
        <pack name="DoJa Tetris Sample Application" required="no" preselected="yes">
            <description>A Tetris clone from Sun for DoJa devices.</description>
            <file src="samples/doja/source" targetdir="$INSTALL_PATH/samples/doja"/>
            <file src="samples/doja/resources" targetdir="$INSTALL_PATH/samples/doja"/>
            <file src="../setup/samples/doja/.classpath" targetdir="$INSTALL_PATH/samples/doja"/>
            <file src="../setup/samples/doja/.project" targetdir="$INSTALL_PATH/samples/doja"/>
            <file src="../setup/samples/doja/build.xml" targetdir="$INSTALL_PATH/samples/doja"/>
            <file src="../setup/samples/doja/build-netbeans.xml" targetdir="$INSTALL_PATH/samples/doja"/>
            <file src="../setup/samples/doja/nbproject" targetdir="$INSTALL_PATH/samples/doja"/>
            <parsable targetfile="$INSTALL_PATH/samples/doja/build-netbeans.xml" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/doja/nbproject/project.properties" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/doja/build.xml" type="shell" /> 
            <parsable targetfile="$INSTALL_PATH/samples/doja/.classpath" type="shell" /> 
        </pack>
        <pack name="External Device Database" required="no" preselected="yes" >
            <description>The files &quot;devices.xml&quot;, &quot;vendors.xml&quot;, &quot;groups.xml&quot; and &quot;apis.xml&quot; etc. These are necessary if you want to add your own device-definitions or modify existing ones.</description>
            <file src="devices.xml" targetdir="$INSTALL_PATH"/>
            <file src="vendors.xml" targetdir="$INSTALL_PATH"/>
      	    <file src="groups.xml" targetdir="$INSTALL_PATH"/>
            <file src="apis.xml" targetdir="$INSTALL_PATH"/>
            <file src="platforms.xml" targetdir="$INSTALL_PATH"/>
            <file src="configurations.xml" targetdir="$INSTALL_PATH"/>
            <file src="capabilities.xml" targetdir="$INSTALL_PATH"/>
            <file src="custom-extensions.xml" targetdir="$INSTALL_PATH"/>
        </pack>
        <pack name="Docs" required="no" preselected="yes">
            <description>The documentation of J2ME Polish in HTML and PDF format.</description>
            <file src="doc" targetdir="$INSTALL_PATH"/> <!-- Reccursive adding -->
        </pack>
        <pack name="Tools" required="no" preselected="yes">
            <description>General stand-alone tools for J2ME development, e.g. the binary data editor or an editor for creating bitmap-fonts.</description>
            <file src="macosx/binaryeditor.app" targetdir="$INSTALL_PATH/bin">
            	<os name="Mac OS X" />
            </file>
            <file src="macosx/fonteditor.app" targetdir="$INSTALL_PATH/bin" >
            	<os name="Mac OS X" />
            </file>
            <file src="../setup/scripts/binaryeditor" targetdir="$INSTALL_PATH/bin" os="unix"/>
            <file src="../setup/scripts/binaryeditor.bat" targetdir="$INSTALL_PATH/bin" os="windows"/>
            <file src="../setup/scripts/fonteditor" targetdir="$INSTALL_PATH/bin" os="unix"/>
            <file src="../setup/scripts/fonteditor.bat" targetdir="$INSTALL_PATH/bin" os="windows"/>
            <file src="../setup/bin/level.definition" targetdir="$INSTALL_PATH/bin" />
            <file src="../setup/bin/level1.data" targetdir="$INSTALL_PATH/bin" />
            <file src="../setup/bin/readme.txt" targetdir="$INSTALL_PATH/bin" />
            <file src="../setup/bin/example.bmf" targetdir="$INSTALL_PATH/bin" />
            <file src="../setup/bin/bmf.definition" targetdir="$INSTALL_PATH/bin" />
            <!-- mark Unix shell skripts as executable: -->
            <executable targetfile="$INSTALL_PATH/bin/binaryeditor" stage="never" os="unix" />
            <executable targetfile="$INSTALL_PATH/bin/fonteditor" stage="never" os="unix" />
            <executable targetfile="$INSTALL_PATH/bin/fonteditor.app/Contents/MacOS/FontEditor" stage="never" >
            	<os name="Mac OS X" />
            </executable>
            <executable targetfile="$INSTALL_PATH/bin/binaryeditor.app/Contents/MacOS/BinaryEditor" stage="never">
            	<os name="Mac OS X" />
            </executable>            
            <parsable targetfile="$INSTALL_PATH/bin/binaryeditor" type="shell"  os="unix" /> 
            <parsable targetfile="$INSTALL_PATH/bin/binaryeditor.bat" type="shell" os="windows" /> 
            <parsable targetfile="$INSTALL_PATH/bin/fonteditor" type="shell"  os="unix" /> 
            <parsable targetfile="$INSTALL_PATH/bin/fonteditor.bat" type="shell" os="windows" /> 
            <parsable targetfile="$INSTALL_PATH/bin/fonteditor.app/Contents/Info.plist" type="shell">
            	<os name="Mac OS X" />
            </parsable>
            <parsable targetfile="$INSTALL_PATH/bin/binaryeditor.app/Contents/Info.plist" type="shell">
            	<os name="Mac OS X" />
            </parsable>
        </pack>
        <pack name="Sources" required="no" preselected="no">
            <description>The sources of J2ME Polish. These are useful if you want to extend J2ME Polish.</description>
            <file src="j2mepolish-src" targetdir="$INSTALL_PATH"/>
        </pack>
        <pack name="OS X: JadUtil.jar" required="no" preselected="yes">
        	<os name="Mac OS X" />
            <description>The Jad utility is needed for signing MIDlets on Mac OS X platforms.</description>
            <file src="../setup/JadTool.jar" targetdir="$INSTALL_PATH/bin"/>
        </pack>
    </packs>
    
</installation>
